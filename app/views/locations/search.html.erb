<p id="notice"><%= notice %></p>

<div class="margin"></div>

<h1>Locations</h1>

<div class="margin2"></div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price per day in €</th>
      <th>Price per month in €</th>
      <th>Location</th>
      <th>Open</th>
      <th>Close</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= location.price %></td>
        <td><%= location.pricemonth %></td>
        <td><%= location.location %></td>
        <td><%= location.openingtime.to_s (:time) %></td>
        <td><%= location.closingtime.to_s (:time) %></td>
        <!--Door de volgende syntax krijg ik een "ActionView::Template::Error (undefined method `picture' for nil:NilClass" error. De syntax moet overigens wel worden afgesloten met %>. Daar kon ik geen comment van maken.)-->
        <%-#<%= image_tag(@location.picture, height: 50) if @location.picture.present? %>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
